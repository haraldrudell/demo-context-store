{
  "name": "jest-mini",
  "version": "0.0.1",
  "description": "Minimal project to verify Jest functionality by Harald Rudell",
  "author": "Harald Rudell <harald.rudell@gmail.com> (http://haraldrudell.com)",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node --experimental-modules src",
    "test": "jest"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.?(m)js?(x)",
      "**/?(*.)(spec|test).?(m)js?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node",
      "mjs"
    ],
    "transform": {
      "^.+\\.m?js$": "babel-jest"
    }
  },
  "babel": {
    "env": {
      "test": {
        "presets": [["es2015",{"modules": false}]],
        "plugins": [["transform-es2015-modules-commonjs", {"spec": true}]]
      }
    }
  },
  "jestJunk": {
    "transform": {
      "^.+\\.m?js$": "babel-jest"
    }
  },
  "devDependenciesJunk": {
    "babel-core": "^7.0.0-beta.3",
    "babel-jest": "^22.4.3"
  },
  "keywords": [
    "jest",
    "testing"
  ],
  "repository": {
    "type": "git",
    "url": "gt:sw"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "jest": "^22.4.3"
  }
}
