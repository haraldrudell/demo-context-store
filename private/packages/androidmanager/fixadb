doCmd () {
  echo "$*"
  "$@"
}
patch () {
  DIR="$1"
  FILE="$2"
  if [ ! -d "$DIR" ]; then doCmd mkdir "$DIR"; fi
  if [ ! -f "$DIR/$FILE" ]; then doCmd touch "$DIR/$FILE"; fi
}

patch node_modules/adbkit/src adb.js
patch node_modules/adbkit-monkey/src monkey.js
patch node_modules/adbkit-logcat/src logcat.js