git push harald.no.de
exit 0
#!/bin/bash
#
# deploy
# deploy to hosted node.js including privates in node_modules
#
# Written by Harald Rudell
# 120404 first version
#
set -eu
[ ! -d ./cache ] && echo "run deploy from project folder [cache not found]" && exit 1
[ ! -d ./node_modules ] && echo "run deploy from project folder [node_modules not found]" && exit 1
rsync -a --exclude='/.gitignore' --exclude='/cache' --exclude='/deploy' --delete ./ cache/
cd cache
git rm .gitignore >/dev/null
git add node_modules
git commit -m "deploy on `date`"
git push -f harald.no.de
